<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <Button
        android:id="@+id/btnCerrar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#7289da" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/titulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/selecciona_un_proyecto"
            android:textSize="30dp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <Button
            android:id="@+id/btnProyecto1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/proyecto_1"
            android:textSize="20dp"
            android:backgroundTint="#7289da"
            android:textStyle="bold"/>

        <Button
            android:id="@+id/btnProyecto2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/proyecto_2"
            android:textSize="20dp"
            android:backgroundTint="#7289da"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnProyecto3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/proyecto_3"
            android:textSize="20dp"
            android:backgroundTint="#7289da"
            android:textStyle="bold" />

    </LinearLayout>

</LinearLayout>